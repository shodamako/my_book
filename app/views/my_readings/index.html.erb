<p id="notice"><%= notice %></p>

<h1>今後、読みたい本</h1>

<table>
  <thead>
    <tr>
      <th>題名</th>
      <th>著者</th>
      <th>価格</th>
      <th>出版社</th>
      <th>発売日</th>
      <th>ISBNコード</th>
      <th>表紙</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_readings.each do |my_reading| %>
      <tr>
        <td><%= my_reading.book %></td>
        <td><%= my_reading.author %></td>
        <td><%= number_to_currency(my_reading.price, unit: '¥', precision: 0) %></td>
        <td><%= my_reading.publisher %></td>
        <td><%= my_reading.release_date %></td>
        <td><%= my_reading.isbn %></td>
        <td><img src="<%= my_reading.image %>" alt="" hight="80%" width="80%"></td>
        <td><%= link_to '表示', my_reading %></td>
        <td><%= link_to '編集', edit_my_reading_path(my_reading) %></td>
        <td><%= link_to '削除', my_reading, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_my_reading_path %>
